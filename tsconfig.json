{
    "compilerOptions": {
      "target": "es2017",
      // "module": "esnext",
      "module": "commonjs",
      "outDir": "./build",
      "rootDir": "./",
      "baseUrl": ".",
      "declaration": false,
      "strict": true,
      "sourceMap": true,
      "noImplicitAny": true,
      "esModuleInterop": true,
      "alwaysStrict": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "noFallthroughCasesInSwitch": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true
      // "typeRoots": ["./node_modules/@types"]
    },
    "exclude": ["./build/*", "./node_modules/*"],
    "include": ["**/*.ts"]
  }
  